@{

    var opeList = ViewBag.operationsList;

    string[] ops = {"SUMA: ", "RESTA: ", "MULTIPLICACION", "DIVISION", "POTENCIA: ", "RAIZ: "};
    

}

<div style="width:60%" class="container text-center contain">
    <header>
        <h2 class="titulito">Operaciones matemáticas</h2>
    </header>
</div>
<br />

<div id="Division" class="container text-center contain" style="display:block">
    <form asp-action="Operations" method="post">
        <br />
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <h5>Ingrese el primer numero</h5>
                <input class="form-control " type="text" name="num1" />
            </div>
            <div class="col"></div>
        </div>
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <h5>Ingrese el segundo numero</h5>
                <input class="form-control " type="text" name="num2" />
            </div>
            <div class="col"></div>
        </div><br />
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <h5>Ingrese potencia a la que desea elevar</h5>
                <input class="form-control " type="text" name="num3" />
            </div>
            <div class="col"></div>
        </div><br />
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <input class="form-control " type="submit" value="Calcular" />
            </div>
            <div class="col"></div>
        </div>
    </form>
    <br />

</div>
<br /><br />

      <div class="contain container text-center">

          @if (ViewBag.operationsList != null)
          {
              var count = 0;
              foreach (var d in opeList)
              {
                  <div class="row ">
                      <div class="col-3"></div>
                      <div class="col-3"><h6>@ops[count]</h6></div>
                      <div class="col-3">
                          <h6>@d</h6>
                      </div>
                      <div class="col-3"></div>
                  </div>
                  count++;
              }
             
          }
              <div>
                  <h6>
                      @ViewBag.OpError
                  </h6>
              </div>

          </div>